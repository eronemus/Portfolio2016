    {

    <img class="img-responsive" src="@Model.MediaURL" alt="">
    <hr>
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
